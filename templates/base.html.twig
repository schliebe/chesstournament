<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
    </head>
    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-expand navbar-dark bg-secondary bg-gradient">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ constant('App\\Routes::INDEX') }}">
                    <img src="{{ constant('App\\TournamentSettings::TOURNAMENT_LOGO') }}" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
                    {{ constant('App\\TournamentSettings::TOURNAMENT_NAME') }}
                </a>
                <div class="navbar-nav me-auto">
                    <a class="nav-link {% if page == "season" %}active{% endif %}" href="{{ constant('App\\Routes::SEASON') }}">Season</a>
                    <a class="nav-link {% if page == "playoff" %}active{% endif %}" href="{{ constant('App\\Routes::PLAYOFF') }}">Playoff</a>
                </div>
                <div class="navbar-nav me-end">
                    {% if loggedIn %}
                    <a class="nav-link" href="{{ constant('App\\Routes::LOGOUT') }}">Logout</a>
                    {% else %}
                    <a class="nav-link {% if page == "login" %}active{% endif %}" href="{{ constant('App\\Routes::LOGIN') }}">Login</a>
                    {% endif %}
                </div>
            </div>
          </nav>
        <!-- Site content -->
        {% block body %}{% endblock %}
    </body>
</html>